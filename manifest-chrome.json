{
  "name": "Page Marker",
  "description": "Draw on any webpage with markers, highlighters, and text tools",
  "version": "2.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Web Marker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": [
        "marker.png",
        "eraser.png",
        "save.png",
        "pointer.png",
        "highlighter.png",
        "clear.png",
        "undo.png",
        "redo.png",
        "cup-border.png",
        "exit.png",
        "line.png",
        "text.png",
        "move.png",
        "main.css",
        "whiteboard.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}