{
  "name": "RC Marker",
  "description": "Draw on RC graphical pages with markers and highlighters",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "icons": {
    "128": "rc.png"
  },
  "browser_action": {
    "default_icon": "rc.png",
    "default_title": "RC Marker"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.researchcatalogue.net/view/*"
      ],
      "js": ["fabric.min.js", "marker.js"],
      "css": ["main.css"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "support@researchcatalogue.net",
      "strict_min_version": "88.0",
      "data_collection_permissions": {
        "collect": false,
        "required": ["none"]
      }
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "marker.png",
    "eraser.png",
    "save.png",
    "rc.png",
    "pointer.png",
    "highlighter.png",
    "clear.png",
    "undo.png",
    "redo.png",
    "cup-border.png",
    "exit.png",
    "line.png",
    "text.png",
    "move.png",
    "main.css"
  ],
  "manifest_version": 2
}